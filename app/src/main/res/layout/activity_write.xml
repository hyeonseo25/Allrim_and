<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".WriteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0px">

        <androidx.appcompat.widget.Toolbar


            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#11732C"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:baselineAlignBottom="false"/>

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150px"
            android:paddingTop="30px"
            android:ems="10"
            android:hint="제목"
            android:background="@drawable/square"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280px"
            android:paddingTop="30px"
            android:ems="10"
            android:gravity="start|top"
            android:hint="내용"
            android:inputType="textMultiLine"
            android:background="@drawable/square"
            android:lines="15"/>

        <Button
            android:layout_width="980px"
            android:layout_height="120px"
            android:layout_marginTop="1200px"
            android:layout_marginLeft="50px"
            android:text="사진 등록"
            android:background="@drawable/square"/>

        <ImageView
            android:layout_width="980px"
            android:layout_height="300px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="1350px"
            android:background="@drawable/square"/>

        <Button
            android:layout_width="480px"
            android:layout_height="120px"
            android:layout_marginTop="1700px"
            android:layout_marginLeft="50px"
            android:text="취소"
            android:background="@drawable/square"/>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="480px"
            android:layout_height="120px"
            android:layout_marginTop="1700px"
            android:layout_marginLeft="550px"
            android:text="등록"
            android:background="@drawable/square"/>




    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>