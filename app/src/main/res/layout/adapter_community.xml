<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    android:background="@drawable/square"
    android:fitsSystemWindows="true"
    android:weightSum="10">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="title"
            android:textSize="20sp" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="0dp"
            android:layout_height="90px"
            android:layout_weight="2"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/person" />

        <TextView
            android:id="@+id/userID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="TextView"
            android:textSize="22sp" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <TextView
            android:id="@+id/context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="context"
            android:textSize="20sp" />
    </TableRow>


    <!-- 좋아요 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/iconLike"
            android:layout_width="0dp"
            android:layout_height="90px"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:background="#fffff"
            app:srcCompat="@drawable/icon_like"
            android:layout_marginLeft="240px"/>

        <TextView
            android:id="@+id/textLike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="23px"
            android:text="좋아요"
            android:textSize="15sp"
            android:layout_marginLeft="0px"/>



        <ImageButton
            android:id="@+id/iconBad"
            android:layout_width="0dp"
            android:layout_height="90px"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:background="#fffff"
            app:srcCompat="@drawable/icon_bad"
            android:layout_marginLeft="90px"/>

        <TextView
            android:id="@+id/textBad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="23px"
            android:text="싫어요"
            android:textSize="15sp"
            android:layout_marginLeft="0px"/>
    </TableRow>

</TableLayout>